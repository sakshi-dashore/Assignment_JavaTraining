<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="com.sd.Book" table="Book">
<id name="id" type="int" column="id">
<generator class="assigned"/>
</id>

 <property name="title">
<column name="title" />
</property>
<property name="author">
<column name="author"/>
</property>
<property name="price">
<column name="price" />
</property>
<property name="genre">
<column name="genre"/>
</property>
</class>
</hibernate-mapping>
